turtle.select(16)

print("Insert fuel into slot 16")
print("Insert Chests into slot 15")
print("Insert Torches into slot 14")
print("Enter the strip mine length")

length = read()

print("Enter the number of strip mines")

numMine = read()

local status = "running"
local CurLength = 0
local CurStrip = 0
local MaxStrips = numMine

-- #### FUNCTIONS ####


-- ## Refueling
function Refuel()
  turtle.select(16)
  turtle.refuel()
end


-- ## Check Fuel Level
function CheckFuel()
  if turtle.getFuelLevel() < 400 then
    Refuel()
  end
end


-- ## Place Chest
function PlaceChest()
  turtle.turnRight()
  turtle.select(15) 
  if turtle.detect() == false then
    turtle.place()
  else
    turtle.turnLeft()
    return false
  end
  turtle.turnLeft()
  return true
end


-- ## Dig Strip Forward
function Forward()
  while turtle.detect() do
    turtle.dig()
  end

  turtle.forward()

  if turtle.detectUp() then
    turtle.digUp()
  end
end

-- ## Place Torches
function PlaceTorch()
  turtle.turnRight()
  if turtle.detectUp() == false then
    turtle.select(14)
    turtle.placeUp()
  end
  turtle.turnLeft()
end


-- ## Move to Next Strip
function NextStrip()
  turtle.turnLeft()
  for i = 1, 4 do
    if turtle.detect() then
      turtle.turnLeft()
      turtle.forward()
      turtle.turnRight()
      turtle.forward()
      turtle.forward()
      turtle.turnRight()
      turtle.forward()
      turtle.turnLeft()
    else
      forward()
    end
  end
  turtle.turnRight()
end
  


-- ## Return to chest location
function ReturnToChest()
  turtle.turnRight()
  turtle.turnRight()
  
  for i = 1, CurLength do
    forward()
  end

  turtle.turnLeft()

end


-- ## Drop Items In Chest
function DropInChest()
  if turtle.detect() then
    for i = 1, 13 do
      turtle.select(i)
      turtle.drop()
    end
  end
  turtle.turnLeft()
end


-- #### END OF FUNCTIONS ####



for i = 1, MaxStrips do
  CurLength = 0
  CurStrip = i
  PlaceChest()

  for i = 1, length do
    CurLength = i
    CheckFuel()

    if i % 13 == 0 then
      PlaceTorch()
    end

    if status == "running" then
      Forward(i)
    end

  end
  
  ReturnToChest()

  DropInChest()
  
  NextStrip()

end

